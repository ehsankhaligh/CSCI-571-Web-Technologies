<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_layout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/news_source"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="5"
        android:scrollHorizontally="true"
        android:text="CNN"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/news_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="5"
        android:scrollHorizontally="true"
        android:text="March 28,2022"
        android:textColor="@color/gray"
        android:textFontWeight="700"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="5"
        android:scrollHorizontally="true"
        android:text="__________________________________________"
        android:textColor="@color/gray"
        android:textFontWeight="700"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/news_detail"
        android:layout_width="282dp"
        android:layout_height="280dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="30"
        android:scrollHorizontally="true"
        android:text="Some Details ............"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chrome_open"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_icons8_chrome_144" />

        <ImageView
            android:id="@+id/twitter_share"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_icons8_twitter_circled" />

        <ImageView
            android:id="@+id/facebook_share"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_icons8_facebook" />

    </LinearLayout>

</LinearLayout>