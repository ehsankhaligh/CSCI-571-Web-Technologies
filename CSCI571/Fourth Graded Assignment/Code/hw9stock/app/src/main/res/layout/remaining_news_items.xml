<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="372dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/newsothersourcedate"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/course_name"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/newsotherhoursago"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:text="@string/course_rating" />

        <TextView
            android:id="@+id/newsotherheadlin"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsothersourcedate"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:text="@string/course_rating"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/newsotherimage"
            android:layout_width="80dp"
            android:layout_height="82dp"
            android:layout_marginStart="131dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/newsothersourcedate"
            android:src="@drawable/download"
            android:contentDescription="@string/app_name"
            android:padding="5dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
