<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/bg_layout"
    android:paddingHorizontal="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/trade_title_dialog"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="5"
        android:scrollHorizontally="true"
        android:text="Trade Tesla Inc Shares"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">

        <EditText
            android:id="@+id/trade_input"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="0dp"
            android:background="@drawable/bottom_line"
            android:gravity="bottom"
            android:hint="0"
            android:inputType="numberDecimal"
            android:textSize="30dp" />


        <TextView
            android:id="@+id/shares_title_box"
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingLeft="0dp"
            android:text="shares"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/buy_sell_summary"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="2.0*$1091.84/share=2183.68"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/detail_trade_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="11dp"
        android:gravity="center"
        android:text="$25,000 to buy TESLA"
        android:textColor="@color/gray"
        android:textFontWeight="700"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/detail_trade_buy"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_layout_sqr"
            android:backgroundTint="#008000"
            android:text="BUY"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/detail_trade_sell"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_layout_sqr"
            android:backgroundTint="#008000"
            android:text="SELL"
            android:textColor="@color/white"
            android:textSize="11dp" />
    </LinearLayout>


</LinearLayout>