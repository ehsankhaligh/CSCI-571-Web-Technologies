<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/toparea">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/shares_owned_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="72dp"
            android:background="@color/white"
            android:text="Shares Owned:"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/portfolio_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:text="Portfolio"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/total_cost_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="152dp"
            android:background="@color/white"
            android:text="Total Cost:"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/change_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="188dp"
            android:background="@color/white"
            android:text="Change:"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/market_val_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="232dp"
            android:background="@color/white"
            android:text="Market Value:"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/avg_cost_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="108dp"
            android:background="@color/white"
            android:text="Avg. Cost/Share:"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shares_owned_val"
            android:layout_width="48dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="72dp"
            android:layout_marginRight="196dp"
            android:background="@color/white"
            android:text="1"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/avg_cost_val"
            android:layout_width="50dp"
            android:layout_height="18dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="108dp"
            android:layout_marginRight="180dp"
            android:background="@color/white"
            android:text="$170"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/total_cost_val"
            android:layout_width="54dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="152dp"
            android:layout_marginRight="192dp"
            android:background="@color/white"
            android:text="$352"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/change_val"
            android:layout_width="53dp"
            android:layout_height="19dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="188dp"
            android:layout_marginRight="192dp"
            android:background="@color/white"
            android:text="$-0.04"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/market_value_val"
            android:layout_width="57dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="232dp"
            android:layout_marginRight="188dp"
            android:background="@color/white"
            android:text="$352.46"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/trade_button"
            android:layout_width="134dp"
            android:layout_height="46dp"
            android:layout_marginTop="160dp"
            android:layout_marginRight="4dp"
            android:layout_weight="5"
            android:background="@drawable/bg_layout_sqr"
            android:backgroundTint="#008000"
            android:text="TRADE"
            android:textColor="@color/white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>